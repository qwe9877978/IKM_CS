<Window x:Class="IKMC.AddEditCourierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Курьер" Height="220" Width="350">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="ID Курьера:" Visibility="Collapsed"/>
            <TextBox x:Name="txtIdCourier" Text="{Binding IdCourier}" Visibility="Collapsed"/>

            <Label Content="Рейтинг курьера (0-5):"/>
            <TextBox x:Name="txtRate" Text="{Binding RateCourier}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Сохранить" Click="Save_Click" Width="80" Height="30" Margin="5"/>
                <Button Content="Отмена" Click="Cancel_Click" Width="80" Height="30" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
