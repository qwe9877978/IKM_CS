<Window x:Class="IKMC.AddEditShopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Магазин" Height="250" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="ID магазина:"/>
            <TextBox x:Name="txtIdShop" Text="{Binding IdShop}"/>

            <Label Content="Рейтинг (0-5):"/>
            <TextBox x:Name="txtRate" Text="{Binding RateShop}"/>

            <Label Content="ID Продукта:"/>
            <TextBox x:Name="txtIdProduct" Text="{Binding IdProduct}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Сохранить" Click="Save_Click" Width="80" Height="30" Margin="5"/>
                <Button Content="Отмена" Click="Cancel_Click" Width="80" Height="30" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>